{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>terraform-ibm-modules/common-dev-assets:commonRenovateConfig"],
  "group": true,
  "groupName": "all",
  "regexManagers": [
    {
      "fileMatch": ["^.github/workflows/common.yml$"],
      "matchStrings": ["image: (?<depName>.*?):(?<currentValue>.*?)@sha256:(?<currentDigest>sha256:[a-f0-9]+)s"],
      "versioningTemplate": "{{depName}}{{#if newValue}}:{{newValue}}{{/if}}{{#if newDigest}}@{{newDigest}}{{/if}}",
      "datasourceTemplate": "docker",
      "depNameTemplate": "icr.io/goldeneye_images/ubi8-cluster-tools"
    }
  ]
}
